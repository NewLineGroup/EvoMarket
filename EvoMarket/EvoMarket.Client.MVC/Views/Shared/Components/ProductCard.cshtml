@model EvoMarket.Client.MVC.Models.Home.ProductModel;
<div class="card border border-1 border-secondary d-inline-block" style="width: 18rem;">
  <img src="@Model.Image" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title fw-bold mb-3">@Model.Title</h5>
    <div class="mb-3">
      <div class="d-inline-flex flex-row gap-1">
        <i class="bi bi-star"></i>
        <i class="bi bi-star"></i>
        <i class="bi bi-star"></i>
        <i class="bi bi-star"></i>
        <i class="bi bi-star"></i>
      </div> @Model.Rate
    </div>
    <div class="d-flex flex-row justify-content-between">
      <div>@Model.Price$</div>
      @{
        if (Model.Discount.HasValue)
        {
          <div 
            class="border  fw-bold border-0 rounded text-danger  p-1"
            style="background-color: rgba(204,114,127,0.44)"
          >-@Model.Discount% OFF</div>
        }
      }
      </div>
  </div>
</div>