{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 2505
        }
      ],
      "UpstreamPathTemplate": "/api-shop/{everything}",
      "UpstreamHttpMethod": [ "Put", "Delete", "Post", "Get" ]
    },


    {
      "DownstreamPathTemplate": "/{postId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 1211
        }
      ],
      "UpstreamPathTemplate": "/api-payment/{postId}",
      "UpstreamHttpMethod": [ "Put", "Post", "Get" ]
    }
  ]

}
