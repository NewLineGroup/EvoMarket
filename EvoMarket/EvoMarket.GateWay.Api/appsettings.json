{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "LaunchUrl" : "http://localhost:12200",
  "AllowedHosts": "*",
  "Routes": [
    {
      "DownstreamPathTemplate": "/{PeekUrls}",
      "DownstreamSchema" : "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5132
        }
      ],
      "UpstreamPathTemplate" : "/api-notification/{PeekUrls}",
      "UpstreamHttpMethod": ["Put","Get","Post","Delete"]
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 1214
        }
      ],
      "UpstreamPathTemplate": "/api-auth/{everything}",
      "UpstreamHttpMethod": [
        "POST",
        "PUT",
        "GET",
        "DELETE"
      ]
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 2505
        }
      ],
      "UpstreamPathTemplate": "/api-shop/{everything}",
      "UpstreamHttpMethod": [ "Put", "Delete", "Post", "Get" ]
    },
    {
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 1211
        }
      ],
      "UpstreamPathTemplate": "/api-payment/{url}",
      "UpstreamHttpMethod": [ "Put", "Post", "Get" ]
    }
  ]
}
